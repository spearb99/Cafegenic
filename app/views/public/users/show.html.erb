<div class="container">
  <div class="row ml-5">
   <div class="card mt-4 ml-3" , style="width: 60rem;">
    <div class="card-header d-flex">
     <% if @user.id == current_user.id %>
     <h3 style="color:#563a3a;">My Page</h3>
     <div class="ml-auto">
      <%= link_to "編集する", edit_user_path(@user), class:"btn", style: "background-color: #795a5a; color: white;" %>
     </div>
     <% else %>
     <div class="ml-auto" id="follow_buttons_<%= @user.id %>"><%= render "public/relationships/relationship", user: @user %></div>
     <% end %>
     </div>
     <div class="card-body">
      <div class="row">
        <div class="col-6 mb-5">
         <%= image_tag @user.get_profile_image, size: '200x200',class:"mt-3 rounded-circle" %>
        </div>
      <div class="col-6">
       <p class="card-title">
         <div class="row">
          <div>
           <h3 class="mt-5"><%= @user.name %></h3>
           <div class="d-flex">
            <h5 id="followers_counts"><%= render "public/relationships/follower", user: @user %>フォロー</h5>
            <h5 class="ml-3" id="followeds_counts"><%= render "public/relationships/followed", user: @user %>フォロワー</h5>
           </div>
          </div>
        </div>
       </p>
      </div>
       <h4 class="ml-5"><%= @user.introduction %></h4>
     </div>
    </div>
  </div>
  <div class="ml-3 mt-4">
   <h3 style="color:#563a3a;">投稿一覧</h3>
   <div class="post mb-5"><%= render "public/posts/index", posts: @posts %></div>
  </div>
  <%= paginate @posts %>
 </div>
</div>
