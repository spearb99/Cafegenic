<h1>Follow User</h1>
<% if @users.exists? %>
<table class='table'>
 <thead>
  <tr>
   <th></th>
   <th>name</th>
  　<th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
   <tr>
    <% @users.each do |user| %>
    <td><%= image_tag user.get_profile_image, size: '50x50', class:"mt-3 rounded-circle" %></td>
    <td><%= user.name %></td>
    <td>フォロー: <%= user.followers.count %></td>
    <td>フォロワー: <%= user.followeds.count %></td>
    <td><%= link_to '詳細', user, class:"text-dark" %></td>
   </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>