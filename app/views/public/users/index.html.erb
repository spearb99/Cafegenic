<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">User一覧</h4>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>name</th>
            </tr>
          </thead>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: "300x200" %></td>
              <td><%= link_to user.name, user_path(user), class: "text-dark" %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>