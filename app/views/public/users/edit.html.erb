<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <div class="row">
      <h5 class="text-dark bg-light p-4 mb-0">My page編集</h5>
       <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-outline-primary"%>
       <%= link_to "退会",  users_unsubscribe_path, class: "btn btn-outline-danger" %>
       </div>
        <% if @user.email == 'guest@example.com'%>
        <p>ゲストユーザーはユーザー情報の編集ができません。</p>
        <% else %>
        <%= form_with model: @user do |f| %>
      <div class="form-body p-4">
          <%= f.file_field :profile_image, accept: "image/*", class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
            </div>
            <%= f.text_field :name, class:"form-control", placeholder:"name" %>
          </div>
          <%= f.text_area :introduction, class: "form-control", placeholder:"自己紹介" %>
          <%= f.text_field :email, class:"form-control", rows:"3", placeholder:"email" %>
          <hr>
          <%= f.submit '変更', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>