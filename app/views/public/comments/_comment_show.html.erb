<div class="d-inline-flex flex-column">
  <% post.comments.each do |post_comment| %>
    <div class="d-flex">
    <div class="mb-3">
        <%= image_tag post_comment.user.get_profile_image, size: '50x50',class:"mt-3 rounded-circle" %><br>
        <%= link_to post_comment.user.name, user_path(post_comment.user),class:"text-dark" %>
      </div>
      <div class="ml-3 mt-4">
        <%= post_comment.content %>
        <% if post_comment.user == current_user %>
         <%= link_to post_comment_path(post, post_comment),method: :delete , remote:true, data: {"turbolinks" => false} do %>
         <i class="fas fa-trash-alt"></i>
         <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>