 <table class="table table-borderless">
  <tr>
    <td><%= image_tag @post.post_image, size: "300x200" %></td>
  </tr>
  <tr>
    <td><%= @post.shop_name %></td>
  </tr>
  <tr>
    <td><%= @post.text %></td>
  </tr>
  <tr>
    <td id="address"><%= @post.address %></td>
  </tr>
  <tr>
  <td>
   <!-- タグリスト -->
      <% @post_cafe_tags.each do |tag| %>
      <i class="fa-sharp fa-solid fa-tag"></i>
        <%= tag.name %>
      <% end %>
  </tr>
  <tr>
    <td id="favorite_buttons_<%= @post.id %>" >
    <%= render "public/favorites/favorite", post: @post %></td>
  </tr>
  <div id='map'>
  </div>
<style>
#map{
  height: 400px;
}
</style>

<script>
/*
mapを関数の外で定義(codeAddressでも使うため)
geocoderを用意
*/

let map
let geocoder

function initMap(){
  // geocoderを初期化
  geocoder = new google.maps.Geocoder()

  map = new google.maps.Map(document.getElementById('map'), {
  //center: {lat: <%= @post.latitude || 0 %>, lng: <%= @post.longitude || 0 %>},
  zoom: 20
  });

  codeAddress();
}

function codeAddress(){
  // 入力を取得
  let inputAddress = document.getElementById('address').textContent;

  // geocodingしたあとmapを移動
  geocoder.geocode( { 'address': inputAddress}, function(results, status) {
    if (status == 'OK') {
　　　　　　　　　　　　// map.setCenterで地図が移動
      map.setCenter(results[0].geometry.location);

　　　　　　　　　　　　// google.maps.MarkerでGoogleMap上の指定位置にマーカが立つ
      var marker = new google.maps.Marker({
          map: map,
          position: results[0].geometry.location
      });
    } else {
      alert('Geocode was not successful for the following reason: ' + status);
    }
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>&callback=initMap" async defer></script>

</tr>
  <td>
    <%= link_to "編集する", edit_post_path(@post), class:"btn", style: "background-color: #64CCC5; color: white; ml-3" %>
  </td>
  </tr>
</table>
