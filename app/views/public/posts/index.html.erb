<div class="card-list-container py-5">
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post) do %>
      <%= image_tag post.post_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image, size:'100x100', class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to post_path(post), class:"text-dark" do %>
              <strong><i class="fas fa-coffee"></i><span> <%= post.shop_name %></span></strong>
            <% end %>
          </p>
          <span><i class="fas fa-user"></i><%= post.user.name %> ï½œ </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
