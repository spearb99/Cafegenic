<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark p-4 mb-0">投稿フォーム</h5>
      <hr>
      <div class="form-body p-4">
        <%= form_with model: @post do |f| %>
          <%= f.file_field :post_image, accept: "image/*", class: "w-100 img_field", style: 'display:none;'  %>
          <%= image_tag @post.get_post_image, size: "200x200",onClick: "$('.img_field').click()", class: "img_prev" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
            </div>
            <%= f.text_field :shop_name, class:"form-control", placeholder:"ショップ名" %>
          </div>
          <%= f.text_field :address, class: "form-control", placeholder:"住所" %>
          <%= f.text_area :text, class:"form-control", rows:"3", placeholder:"詳細" %>
          <%= f.text_field :name,value: @tag_list, class: 'form-control', placeholder:"タグ(,で区切ると複数タグ登録できます)" %>
          <hr>
          <%= f.submit '投稿', class:"btn btn-lg btn-block mt-4", style: "background-color: #9F6767; color: white;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
