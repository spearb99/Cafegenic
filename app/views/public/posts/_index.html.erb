<% posts.each do |post| %>
  <div class="card mt-4 ml-3" , style="width: 21rem;">
    <%= link_to post_path(post) do %>
      <%= image_tag post.post_image, size: '300x200', class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-4">
          <%= image_tag post.user.get_profile_image, size:'100x100', class:"mt-3 rounded-circle"; %>
           <span><i class="fas fa-user"></i><%= post.user.name %> </span>
        </div>
        <div class="col-8">
          <p class="card-title">
            <%= link_to post_path(post), class:"text-dark" do %>
              <strong><i class="fas fa-coffee"></i><span> <%= post.shop_name %></span></strong>
            <% end %>
          </p>
          <span><i class="fas fa-heart"></i><%= link_to "#{post.favorites.count} いいね", post_path(post), class:"text-dark" %> | </span>
          
          <span><i class="fas fa-comment"></i><%= link_to "#{post.comments.count} コメント", post_path(post), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>